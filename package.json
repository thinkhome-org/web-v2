{
  "name": "web-v6-init",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "serve:out": "serve -s out -l 4000",
    "test": "jest --runInBand",
    "typecheck": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "prepare": "husky",
    "format": "prettier --write .",
    "clean": "rm -rf .next out",
    "verify": "npm run lint && npm run typecheck && npm run test && npm run build",
    "release": "standard-version"
  },
  "dependencies": {
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/typography": "^0.5.18",
    "marked": "^16.3.0",
    "next": "15.5.3",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.3",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.2.0",
    "npm-check-updates": "^18.3.0",
    "prettier": "^3.6.2",
    "serve": "^14.2.5",
    "standard-version": "^9.5.0",
    "svgo": "^4.0.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "jest --bail --findRelatedTests",
      "tsc --noEmit"
    ],
    "*.{js,jsx}": [
      "eslint --fix"
    ],
    "*.{css,md}": [
      "prettier --write"
    ],
    "public/**/*.svg": [
      "svgo --config=svgo.config.json"
    ]
  }
}
